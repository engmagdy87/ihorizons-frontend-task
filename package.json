{
  "name": "modern-pokemon-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "REACT_APP_API_BASE_URL=${REACT_APP_API_BASE_URL:-https://pokeapi.co/api/v2} yarn react-scripts start",
    "start:local": "REACT_APP_API_BASE_URL=http://localhost:3001 yarn react-scripts start",
